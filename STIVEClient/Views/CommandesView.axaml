<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="using:STIVEClient.ViewModels"
             x:DataType="vm:CommandesViewModel"
             x:Class="STIVEClient.Views.CommandesView">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="Gray" CornerRadius="3" Width="400" Height="30" Margin="0,5,0,0">
            <Grid>
                <ComboBox MaxWidth="200" MinWidth="180" MinHeight="30"
                          ItemsSource="{Binding DropdownItems}"
                          SelectedItem="{Binding SelectedDropdownItem}"
                          Margin="5 0 0 0" />
                <TextBlock HorizontalAlignment="Center" Margin="180 2 0 0" FontSize="18" FontWeight="Bold">
                    une commande
                </TextBlock>
            </Grid>
        </Border>
        <!-- ContentField 1 (Add Article)-->
        <Grid IsVisible="{Binding IsAdding}" Grid.Row="1" Background="LightGray" Margin="0 40 0 0" Width="500">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
            </Grid.RowDefinitions>
            <TextBlock FontWeight="Bold" Text="Nom" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0"
                       Margin="5,0" />
            <TextBlock FontWeight="Bold" Text="Famille" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0"
                       Margin="5,0" />
            <TextBlock FontWeight="Bold" Text="Reference" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0"
                       Margin="5,0" />
            <TextBlock FontWeight="Bold" Text="Date de commande" VerticalAlignment="Center" Grid.Row="3" Grid.Column="0"
                       Margin="5,0" />
            <TextBlock FontWeight="Bold" Text="Fournisseur" VerticalAlignment="Center" Grid.Row="4" Grid.Column="0"
                       Margin="5,0" />
            <TextBlock FontWeight="Bold" Text="QuantitÃ©" VerticalAlignment="Center" Grid.Row="5" Grid.Column="0"
                       Margin="5,0" />
            <TextBlock FontWeight="Bold" Text="Prix" VerticalAlignment="Center" Grid.Row="6" Grid.Column="0"
                       Margin="5,0" />
            <TextBox Grid.Row="0" Grid.Column="1" Margin="5" HorizontalAlignment="Stretch" />
            <TextBox Grid.Row="1" Grid.Column="1" Margin="5" HorizontalAlignment="Stretch" />
            <TextBox Grid.Row="2" Grid.Column="1" Margin="5" HorizontalAlignment="Stretch" />
            <TextBox Grid.Row="3" Grid.Column="1" Margin="5" HorizontalAlignment="Stretch" />
            <TextBox Grid.Row="4" Grid.Column="1" Margin="5" HorizontalAlignment="Stretch" />
            <TextBox Grid.Row="5" Grid.Column="1" Margin="5" HorizontalAlignment="Stretch" />
            <Button Grid.Row="7" Width="200" Height="30" Margin="10 10 0 10">
                <TextBlock Text="Passer une commande"></TextBlock>
            </Button>
        </Grid>
        <!-- ContentField 1-->

        <!-- ContentField 2-->
        <Grid IsVisible="{Binding IsRecherching}" Grid.Row="2" Background="LightGray" Margin="0 40 0 0" Width="650">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition Width="100"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="50" />
                <RowDefinition Height="200" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" FontWeight="Bold" Text="Nom" VerticalAlignment="Center"
                       Margin="5,0" />
            <TextBox Grid.Row="1" Grid.Column="0" Margin="5" HorizontalAlignment="Stretch" />
            
            <TextBlock Grid.Row="0" Grid.Column="1" FontWeight="Bold" Text="Famille" VerticalAlignment="Center"
                       Margin="5,0" />
            <TextBox Grid.Row="1" Grid.Column="1" Margin="5" HorizontalAlignment="Stretch" />
            
            <TextBlock Grid.Row="0" Grid.Column="2" FontWeight="Bold" Text="Reference" VerticalAlignment="Center"
                       Margin="5,0" />
            <TextBox Grid.Row="1" Grid.Column="2" Margin="5" HorizontalAlignment="Stretch" />
            
            <TextBlock Grid.Row="0" Grid.Column="3" FontWeight="Bold" Text="Date de commande" VerticalAlignment="Center"
                       Margin="5,0" />
            <TextBox Grid.Row="1" Grid.Column="3" Margin="5" HorizontalAlignment="Stretch" />
            
            <TextBlock Grid.Row="0" Grid.Column="4" FontWeight="Bold" Text="Fournisseur" VerticalAlignment="Center"
                       Margin="5,0" />
            <TextBox Grid.Row="1" Grid.Column="4" Margin="5" HorizontalAlignment="Stretch" />
            
            <Button Grid.Row="2" Grid.Column="4" Width="120" Height="30" Margin="10 10 0 10">
                <TextBlock Text="Rechercher"></TextBlock>
            </Button>
            <Grid>
                <DataGrid AutoGenerateColumns="False" GridLinesVisibility="All" Margin="10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="id" Width="Auto" />
                        <DataGridTextColumn Header="Nom" Width="Auto" />
                        <DataGridTextColumn Header="Famille" Width="Auto" />
                        <DataGridTextColumn Header="Reference" Width="Auto" />
                        <DataGridTextColumn Header="Prix" Width="Auto" />
                        <DataGridTextColumn Header="Age" Width="Auto" />
                        <DataGridTextColumn Header="QuantitÃ©" Width="Auto" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

        </Grid>
        <!-- ContentField 2-->
    </Grid>

</UserControl>