@{
    ViewData["Title"] = "Home Page";
}
@model List<LibrarySTIVE.Models.ModelArticleJson>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="front.css">
    <title>@ViewData["Title"]</title>
</head>

<body>
    <div class="filters">
        <select>
            <option value="">Trier par</option>
            <option value="Nom">Nom</option>
            <option value="Prix">Prix</option>
            <option value="Famille">Famille</option>
        </select>
    </div>

    <h2>Articles</h2>
    <section class="gallery">
        @if (Model != null && Model.Count > 0)
        {
            foreach (var article in Model)
            {
                <div class="gallery-item">
                    <img src="placeholder.jpg" alt="Vin">
                    <h2>@article.Nom</h2>
                    <h3>@article.FamilleId</h3>
                    <p>@article.Prix €</p>
                    <a href="/ProductDetails/@article.Id" class="details-link">Voir les détails</a>
                </div>
            }
        }
        else
        {
            <p>No articles available</p>
        }
    </section>
    <style>
        html {
            margin: 0;
        }

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        header {
            background-color: #f4e3d2;
            padding: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        header nav a {
            margin: 0 15px;
            text-decoration: none;
            color: #333;
        }

        header nav a:hover {
            text-decoration: underline;
        }

        .hero {
            height: 200px;
            display: flex;
            justify-content: center;
            align-items: center;
            background: #ddd;
            color: #333;
        }

        .filters {
            padding: 20px;
            background-color: #fff;
            display: flex;
            justify-content: center;
        }

        .filters select {
            padding: 10px;
        }

        .gallery {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            padding: 20px;
        }

        .gallery-item {
            text-align: center;
            border: 1px solid #ddd;
            border-radius: 5px;
            overflow: hidden;
            background: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 15px;
        }

        .gallery-item img {
            width: 100%;
            height: auto;
        }

        .gallery-item h2 {
            font-size: 1.2rem;
        }

        .gallery-item h3 {
            color: #777;
            margin: 10px 0;
        }

        .gallery-item p {
            margin: 5px 0;
        }

        .details-link {
            display: inline-block;
            margin-top: 10px;
            padding: 8px 15px;
            background-color: #333;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
        }

        .details-link:hover {
            background-color: #555;
        }

        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 10px;
        }
    </style>
</body>

</html>
