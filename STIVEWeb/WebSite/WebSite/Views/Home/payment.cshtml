@model LibrarySTIVE.Models.CompleteOrderModel

<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Finalisation de Commande</title>
    <link rel="stylesheet" href="payment.css">
</head>

<body>
    <div class="container">
        <!-- Section coordonnées -->
        <div class="section">
            <h2>1. COORDONNÉES</h2>
            <p>@Model.Client.Mail</p>
        </div>

        <!-- Section livraison -->
        <div class="section">
            <h2>2. LIVRAISON</h2>
            <div class="row">
                <div class="col">
                    <h3>Adresse de livraison</h3>
                    <p>@Model.Client.Name</p>
                    <p>@Model.Client.Address</p>
                    <p>@Model.Client.Postcode @Model.Client.City</p>
                    <p>@Model.Client.Country</p>
                </div>
                <div class="col">
                    <h3>Adresse de facturation</h3>
                    <p>@Model.Client.Name</p>
                    <p>@Model.Client.Address</p>
                    <p>@Model.Client.Postcode @Model.Client.City</p>
                    <p>@Model.Client.Country</p>
                </div>
            </div>
            <div class="radio-group">
                <label>
                    <input type="radio" name="shipping" checked>
                    À domicile express (2 - 4 jours ouvrés) - 40€
                </label>
                <br>
                <label>
                    <input type="radio" name="shipping">
                    En point relais (4 - 8 jours ouvrés) - 20€
                </label>
                <br>
                <label>
                    <input type="radio" name="shipping">
                    En magasin (4 - 8 jours ouvrés) - Gratuit
                </label>
            </div>
        </div>

        <!-- Section paiement -->
        <div class="section">
            <h2>3. PAIEMENT</h2>
            <div class="radio-group">
                <label><input type="radio" name="payment"> Carte bancaire</label><br>
                <label><input type="radio" name="payment"> PayPal</label><br>
                <label><input type="radio" name="payment"> Paiement en 3 fois sans frais</label><br>
                <label><input type="radio" name="payment"> Virement</label><br>
                <label><input type="radio" name="payment"> Carte cadeau</label>
            </div>
        </div>

        <!-- Récapitulatif -->
        <div class="section">
            <h2>RÉCAPITULATIF</h2>
            <div class="summary">
                <p>Sous-total : @Model.Article.Prix €</p>
                <p>Livraison à domicile express : @Model.OrderSummary.ShippingFee €</p>
                <p><strong>TOTAL : @(Model.OrderSummary.Price + Model.OrderSummary.ShippingFee) €</strong></p>
            </div>
            <a href="@Url.Action("BankPage", "Home", new { id = Model.Client.Id })">
                <button class="btn">Payer ma commande</button>
            </a>
        </div>
    </div>
</body>

</html>
<style>
